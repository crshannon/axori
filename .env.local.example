# Shared Environment Variables (used by multiple packages)
# Copy this to .env.local at the root and fill in your values

# Database (Supabase) - Shared by @axori/db and apps
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.mullmlaoraflnvgbjdxx.supabase.co:5432/postgres

# Clerk Authentication - Shared secret key
CLERK_SECRET_KEY=sk_test_...

# External APIs - Shared across apps
RENTCAST_API_KEY=your_rentcast_api_key
ATTOM_API_KEY=your_attom_api_key
APPFOLIO_CLIENT_ID=your_appfolio_client_id
APPFOLIO_CLIENT_SECRET=your_appfolio_client_secret
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox
RESEND_API_KEY=re_...
NEXT_PUBLIC_POSTHOG_KEY=phc_...

# PostHog API Tracking (for API server error tracking)
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com
POSTHOG_ENABLED=true
# Supabase REST API
SUPABASE_URL=https://mullmlaoraflnvgbjdxx.supabase.co
SUPABASE_ANON_KEY=your_publishable_api_key

# ============================================================================
# Feature Flags (Web App)
# ============================================================================

# Coming Soon Mode - Controls landing page experience
# true = Show email capture, hide auth buttons, redirect sign-in/sign-up to home
# false = Normal app with full auth flow
VITE_COMING_SOON_MODE=true

# Auth Bypass - Allow sign-in/sign-up even in coming soon mode (for internal testing)
# Only effective when VITE_COMING_SOON_MODE=true
VITE_ALLOW_AUTH_BYPASS=false

# API URL for the web app
VITE_API_URL=http://localhost:3001

# PostHog Client (for web app analytics and feature flags)
VITE_POSTHOG_KEY=phc_...
VITE_POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# Admin API (for protected endpoints like email capture stats)
# ============================================================================
ADMIN_API_KEY=your_secure_admin_key

# ============================================================================
# Seed Data
# ============================================================================
# Your Clerk user ID or database user UUID for seeding mock data
# Used by: pnpm db:seed:user, pnpm db:seed:cleanup
SEED_USER_ID=
